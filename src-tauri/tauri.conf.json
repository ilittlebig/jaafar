{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.jaafar.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Jaafar",
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "width": 1280,
        "minWidth": 1280,
        "minHeight": 720,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
		"createUpdaterArtifacts": true
  },
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFENDQ5ODg4RTIzRkFCRDEKUldUUnF6L2lpSmhFclordnZLdXhQZ2UyOGtYTXd4UWJHNXRFRWhpaHI4MHVvcmNudVJDQllQOGwK",
			"endpoints": [
        "https://github.com/ilittlebig/jaafar-app/releases/latest/download/latest.json"
      ]
		}
	}
}
